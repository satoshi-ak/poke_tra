<h1><%= @user.name %>のページ</h1>
<% if @user.image? %>
  <%= image_tag @user.image.url,style:'width:100px;height:100px' %></p>
<% end %>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<%= link_to 'お気に入り一覧', favorites_path(@user) %>


<h3> 投稿一覧 <h3>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= image_tag article.image.url,style:'width:100px;height:100px' %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.user.name %></td>
        <td><%= article.country %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= paginate @articles %>


  <% if current_user.try(:admin?) %>
    <%= link_to '管理者ログイン', rails_admin_path %> |
  <% end %>

  <%= link_to '一覧', articles_path %> |
  <%= link_to '新規投稿', new_article_path %> |
  <%= link_to 'プロフィール変更', edit_user_registration_path %> |
  
 