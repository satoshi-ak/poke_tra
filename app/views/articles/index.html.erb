<h1>Travel Information </h1>

  <%= search_form_for @q do |f| %>
  <%= f.label :title_or_country, "キーワード検索" %>
  <%= f.search_field :title_or_country_cont %>

  <%= f.submit "検索" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= image_tag article.image.url,style:'width:100px;height:100px' %></td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to "#{article.user.name}", user_path(article.user.id) %></td>
        <td><%= article.country %></td>
        <td><%= link_to 'Show', article_path(article.id) %></td>
        <!--<td><%= link_to 'Edit', edit_article_path(article) %></td>-->
        <!--<td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
<%= paginate @articles %>