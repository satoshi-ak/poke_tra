
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @article.image.url,style:'width:400px;height:200px' %>
</p>

<p>
  <strong>Country:</strong>
  <%= @article.country %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.name %>
</p>

<% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @article.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(article_id: @article.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
  
